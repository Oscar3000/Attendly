generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invitation {
  id        String     @id @default(cuid())
  name      String
  qrCode    String
  eventDate DateTime
  venue     String
  status    RsvpStatus @default(PENDING)
  plusOne   Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("invitations")
}

enum RsvpStatus {
  PENDING
  CONFIRMED
  DECLINED
  RESCINDED

  @@map("rsvp_status")
}
